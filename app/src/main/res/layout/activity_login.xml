<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.yunjin.microlove.widget.DeletableEditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal"
        android:layout_marginTop="100dp"
        android:background="@drawable/edt_view_bg"
        android:drawableRight="@drawable/btn_delete_selector"
        android:gravity="center"
        android:hint="@string/please_enter_login_name"
        android:maxLines="1"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/font_small" />

    <View style="@style/spaceLine" />

    <com.yunjin.microlove.widget.DeletableEditText
        android:id="@+id/edt_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal"
        android:background="@drawable/edt_view_bg"
        android:drawableRight="@drawable/btn_delete_selector"
        android:gravity="center"
        android:hint="@string/please_enter_password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/font_small" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height_normal"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_normal"
        android:background="@drawable/btn_blue_selector"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/font_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sinaweibo"
            android:layout_width="@dimen/img_small"
            android:layout_height="@dimen/img_small"
            android:src="@drawable/weibo" />

        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="@dimen/img_small"
            android:layout_height="@dimen/img_small"
            android:layout_marginLeft="@dimen/margin_huge"
            android:src="@drawable/qq" />

        <ImageView
            android:id="@+id/iv_wechat"
            android:layout_width="@dimen/img_small"
            android:layout_height="@dimen/img_small"
            android:layout_marginLeft="@dimen/margin_huge"
            android:src="@drawable/wechat_session"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>